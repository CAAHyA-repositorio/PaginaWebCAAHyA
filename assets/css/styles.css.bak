/* CAAHYA — Estilos base */
:root{
  --primary:#262261; /* Azul principal */
  --secondary:#ee8219; /* Naranja */
  --accent:#ffca00; /* Amarillo */
  --text-on-dark:#ffffff;
  --text-muted:#e6e6e6;
}

html,body{height:100%;}
html{ scroll-behavior:smooth; }
body{
  font-family: Verdana, Geneva, Tahoma, sans-serif; /* Alternativa a Brisbane */
  color:#222;
  background:#f7f8fb;
}
img,svg,video{max-width:100%;height:auto;}
/* util */
.object-fit-cover{ object-fit: cover; }

/* Tipografía: usar pesos similares a Brisbane */
h1,h2,h3,h4,h5,h6,.display-1,.display-2,.display-3{
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-weight: 700; /* Bold */
  letter-spacing: .2px;
}
/* Escala fluida para títulos clave */
.hero h1{ font-size: clamp(1.75rem, 2vw + 1.25rem, 2.75rem); }
h2{ font-size: clamp(1.25rem, 1vw + 1rem, 1.75rem); }
h3{ font-size: clamp(1.05rem, .7vw + .9rem, 1.25rem); }

/* Colores utilitarios coherentes con Bootstrap */
.bg-primary-ca{background:var(--primary)!important;}
.bg-primary-ca-soft{background:linear-gradient(180deg, #2f2a83 0%, #262261 60%);} 
.bg-primary-ca-verysoft{background:linear-gradient(180deg, #2f2a83 0%, #262261 40%);} 
.text-on-dark{color:var(--text-on-dark)!important;}
.text-secondary-ca{color:var(--secondary)!important;}
.text-accent{color:var(--accent)!important;}
.border-secondary-ca{border-color:var(--secondary)!important;}

.btn-accent{
  --bs-btn-color:#1f1b4a;
  --bs-btn-bg: var(--accent);
  --bs-btn-border-color: var(--accent);
  --bs-btn-hover-bg: #f0b800;
  --bs-btn-hover-border-color: #f0b800;
  --bs-btn-active-bg:#e6b000;
  --bs-btn-active-border-color:#e6b000;
  font-weight:700;
}

.btn-secondary-ca{
  --bs-btn-color:#fff;
  --bs-btn-bg: var(--secondary);
  --bs-btn-border-color: var(--secondary);
  --bs-btn-hover-bg: #d57215;
  --bs-btn-hover-border-color: #d57215;
  --bs-btn-active-bg:#c66914;
  --bs-btn-active-border-color:#c66914;
  font-weight:600;
}

/* Header */
.navbar-ca{
  background: var(--primary);
  transition: background .3s ease, box-shadow .3s ease, padding .2s ease;
  background: var(--primary);
}
.navbar-brand img{
  height:44px; width:44px;
  object-fit: contain;
  border-radius: 50%;
  background:#ffffff;
  padding:6px;
  border:2px solid var(--accent);
  box-shadow: 0 2px 8px rgba(0,0,0,.15);
  transform-origin: center center;
  transition: transform .22s ease, box-shadow .22s ease;
}

/* Zoom suave del logo al interactuar */
.navbar-brand:hover img,
.navbar-brand:focus-visible img{
  transform: scale(1.08);
  box-shadow: 0 4px 14px rgba(0,0,0,.25);
}
.navbar-brand .brand-text{ color:var(--text-on-dark); font-weight:700; letter-spacing:.5px; }
.nav-link{ color: var(--text-on-dark)!important; opacity:.95; }
.nav-link:hover,.nav-link:focus{ opacity:1; }

/* Contacto en navbar (derecha) */
.navbar-contact{ background: rgba(255,255,255,.08); border:1px solid rgba(255,255,255,.2); padding:.35rem .6rem; border-radius:.5rem; }
.navbar-contact{ display:flex; gap:.75rem; align-items:center; }
.navbar-contact .contact-link{ color:#fff; text-decoration:none; font-size:.9rem; display:flex; align-items:center; gap:.35rem; opacity:.95; }
.navbar-contact .contact-link:hover{ opacity:1; text-decoration:underline; }
.navbar-contact .bi{ color: var(--accent); }
.navbar-contact .divider{ width:1px; height:1.2rem; background: rgba(255,255,255,.25); display:inline-block; }

/* Variante móvil: bloque al final del menú colapsado */
.navbar-contact-mobile{ width:100%; background: rgba(255,255,255,.10); border:1px solid rgba(255,255,255,.2); padding:.6rem .75rem; border-radius:.6rem; }
.navbar-contact-mobile .contact-link{ font-size: .95rem; }

/* Hero */
.hero{
  /* Fondo con imagen institucional */
  background: linear-gradient(180deg, rgba(38,34,97,.60), rgba(0,0,0,.60)),
                             url('../img/CAFondoObscuro.png') center/cover no-repeat;
  background-color: var(--primary);
  color: var(--text-on-dark);
  position: relative; /* para elementos posicionados dentro del hero */
  min-height: 100vh; /* cubrir pantalla completa */
  display: flex;
  align-items: center; /* centrar verticalmente el contenido */
}

/* Ajuste de ancla cuando Entidades está dentro del hero */
.hero-entities{ scroll-margin-top: 90px; }

/* Ocultar imagen lateral del hero y expandir contenido */
.hero .hero-photo{ display:none !important; }
@media (min-width: 992px){
  .hero .col-lg-5{ display:none !important; }
  .hero .col-lg-7{ flex: 0 0 100% !important; max-width: 100% !important; }
}
.hero .lead{ color: var(--text-muted); }
.hero .btn{ white-space: nowrap; }
.hero .btn{ white-space: nowrap; }
.hero-card{
  background: rgba(255,255,255,.06);
  border: 1px solid rgba(255,255,255,.18);
  border-radius: .5rem;
  box-shadow: 0 10px 30px rgba(0,0,0,.25);
  backdrop-filter: blur(2px);
}

/* Secciones con fondo institucional */
.section-formal{
  background: linear-gradient(135deg, rgba(255,255,255,.96) 0%, rgba(245,246,252,.95) 100%);
  color: #1f1b4a;
  position: relative;
  overflow: hidden;
  border-radius: 1.25rem;
  padding: 4rem 0;
  margin-block: 4rem;
  box-shadow: 0 24px 40px rgba(0,0,0,.25);
}
.section-formal::before,
.section-formal::after{
  content:"";
  position:absolute;
  border-radius:50%;
  background: radial-gradient(circle, rgba(238,130,25,.12) 0%, rgba(238,130,25,0) 70%);
  z-index:0;
}
.section-formal::before{
  width:420px; height:420px;
  top:-160px; right:-120px;
  opacity:.28;
}
.section-formal::after{
  width:320px; height:320px;
  bottom:-140px; left:-100px;
  opacity:.16;
}
.section-formal .container{ position:relative; z-index:1; }
.section-formal h2,
.section-formal h3,
.section-formal p,
.section-formal small{ color: #1f1b4a; }

/* Variante clara para secciones informativas */
.section-formal-light{
  background: linear-gradient(135deg, #f6f7fb 0%, #ffffff 55%, rgba(255,255,255,.92) 100%);
  border: 1px solid rgba(38,34,97,.08);
  box-shadow: 0 18px 36px rgba(38,34,97,.10);
  border-radius: 1.25rem;
  padding: 4rem 0;
  margin-block: 4rem;
  position: relative;
  overflow: hidden;
}
.section-formal-light::before{
  content:"";
  position:absolute;
  inset:0;
  background: radial-gradient(circle at top right, rgba(238,130,25,.12), transparent 55%);
  opacity:.7;
}
.section-formal-light .container{ position:relative; z-index:1; }

/* Panel de contacto arriba derecha en hero */
.hero-contact{
  position:absolute; top:.75rem; right:.75rem; z-index:5;
  background: rgba(0,0,0,.45);
  border: 1px solid rgba(255,255,255,.18);
  border-radius: .5rem;
  padding:.5rem .75rem;
  line-height:1;
  backdrop-filter: blur(3px);
}
.hero-contact .contact-link{ color:#fff; text-decoration:none; opacity:.95; }
.hero-contact .contact-link:hover{ opacity:1; text-decoration:underline; }
.hero-contact .bi{ color: var(--accent); margin-right:.35rem; }
.hero-contact .sep{ color:#fff; opacity:.6; }

/* Foto del hero con efecto carta y degradado a la izquierda */
.hero-photo{
  position: relative;
  border-radius: .65rem;
  overflow: hidden;
  background:#ffffff;
  border: 6px solid #ffffff;
  box-shadow: 0 14px 28px rgba(0,0,0,.14), 0 8px 12px rgba(0,0,0,.08);
}
/* Sin degradado sobre la foto */

/* Directorio */
.team-hero{ background:#0f0f20; color:#fff; }
.team-hero .team-hero-media{ position:relative; }
.team-hero-overlay{ position:absolute; inset:0; background: linear-gradient(180deg, rgba(38,34,97,.35), rgba(0,0,0,.45)); }
.team-hero-caption{ position:absolute; left:0; right:0; bottom:1.25rem; color:#fff; }
.card-profile{ border: 1px solid rgba(0,0,0,.06); }
.avatar{ width:96px; height:96px; background: linear-gradient(135deg, rgba(238,130,25,.25), rgba(38,34,97,.25)); display:flex; align-items:center; justify-content:center; color:#fff; }
.avatar-xxl{ width:112px; height:112px; }
.avatar.placeholder{ background: linear-gradient(135deg, rgba(238,130,25,.3), rgba(38,34,97,.35)); }
.avatar-xxl{ max-width: 24vw; max-height:24vw; }

/* Bloques y tarjetas */
.shadow-soft{ box-shadow: 0 12px 28px rgba(38,34,97,.18); }
.rounded-min{ border-radius: .5rem; }

/* Enlaces destacados */
.link-doc{
  display:flex; align-items:center; gap:.5rem; text-decoration:none;
  color:#1f1b4a;
}
.link-doc:hover{ color: #000; }

/* Footer */
footer{
  background: #1f1b4a;
  color: var(--text-on-dark);
}
.footer-link{ color:#d7d7ff; text-decoration:none; }
.footer-link:hover{ color:#fff; text-decoration:underline; }
.social a{ color: var(--secondary); font-size:1.25rem; margin-right:.75rem; }
.social a:hover{ color: #d57215; }
/* Redes en navbar y footer en blanco */
.navbar-ca .social a{ color:#ffffff; }
.navbar-ca .social a:hover{ color:#ffca00; }
footer .social a{ color:#ffffff; }
footer .social a:hover{ color:#d7d7ff; }
@media (min-width: 1200px){
  .navbar-search .form-control{ width:260px; }
}

/* Page transition overlay (index -> otras páginas) */
.page-transition{
  position: fixed;
  inset: 0;
  background: var(--primary);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  opacity: 0;
  pointer-events: none;
}
.page-transition.active{
  opacity: 1;
  pointer-events: all;
}
.page-transition img{
  width: 90vmin;
  max-width: 96vw;
  max-height: 96vh;
  height: auto;
}

/* Listas sobre fondo azul institucional */
.list-entities li{
  padding:.4rem 0;
  border-bottom:1px solid rgba(255,255,255,.18);
}
.list-entities li:last-child{ border-bottom:0; }

/* Ítems con iconos en Entidades */
.entity-item{ display:flex; align-items:center; gap:.65rem; }
.icon-bullet{
  width:2rem; height:2rem; flex:0 0 2rem; border-radius:50%;
  display:inline-flex; align-items:center; justify-content:center;
  background: rgba(238,130,25,.18); /* Naranja suave */
  color: var(--accent); /* Amarillo para el ícono */
  box-shadow: inset 0 0 0 1px rgba(255,255,255,.18);
}
.entity-item .label{ color: var(--text-on-dark); }
.list-entities li:hover .label{ color:#fff; }
.list-entities li:hover .icon-bullet{ transform: translateY(-1px); }

/* Figura/imagen de entidad (placeholder y caption) */
.entity-figure-placeholder{
  width:100%; height:100%;
  background: radial-gradient(600px 280px at 90% -10%, rgba(255,202,0,.28), transparent 55%),
              linear-gradient(135deg, rgba(238,130,25,.25), rgba(38,34,97,.4));
  border-bottom: 1px solid rgba(255,255,255,.18);
}
.entity-figure-caption{
  background: rgba(0,0,0,.25);
  color: var(--text-on-dark);
  font-size:.95rem;
}

/* Tarjetas de Entidades (4 cajas) */
.entity-card{
  position: relative;
  color: #fff;
  border: 1px solid rgba(0,0,0,.05);
  overflow: hidden;
  transition: transform .2s ease, box-shadow .2s ease;
}
.entity-card:hover{ transform: translateY(-3px); }
.entity-card .icon-badge{
  width: 2.5rem; height: 2.5rem; border-radius: 50%;
  display: inline-flex; align-items:center; justify-content:center;
  background: rgba(255,255,255,.18);
  box-shadow: inset 0 0 0 1px rgba(255,255,255,.25);
}
.entity-card h3, .entity-card p{ color:#fff; }

/* Fondos propios para cada tarjeta */
.entity-facultades{
  background:
    radial-gradient(600px 300px at 100% -20%, rgba(255,202,0,.30), transparent 55%),
    radial-gradient(700px 320px at -10% 110%, rgba(238,130,25,.22), transparent 60%),
    linear-gradient(160deg, #2f2a83 0%, #262261 70%);
}
.entity-escuelas{
  background:
    radial-gradient(500px 260px at 0% -10%, rgba(238,130,25,.24), transparent 55%),
    radial-gradient(500px 260px at 110% 110%, rgba(255,202,0,.26), transparent 55%),
    linear-gradient(160deg, #2a276f 0%, #262261 70%);
}
.entity-institutos{
  background:
    radial-gradient(520px 280px at 90% 0%, rgba(255,202,0,.22), transparent 50%),
    linear-gradient(140deg, #1f1b4a 0%, #262261 70%);
}
.entity-centros{
  background:
    radial-gradient(520px 280px at -10% 100%, rgba(238,130,25,.22), transparent 55%),
    linear-gradient(140deg, #24205c 0%, #262261 70%);
}

/* Modal entidades (estilo y animación de expansión) */
.modal-entity .modal-content{
  background:
    radial-gradient(700px 320px at 100% -20%, rgba(0, 17, 255, 0.185), transparent 55%),
    linear-gradient(160deg, #2f2a83 0%, #262261 70%);
  color:#fff;
  border:1px solid rgba(255,255,255,.12); border-radius:.9rem;
  box-shadow: 0 24px 60px rgba(0,0,0,.35);
  position: relative; overflow: hidden;
}
/*Cuando esta expandido*/
.modal-entity .modal-content:before{
  content:""; position:absolute; inset:0; padding:1px; border-radius:inherit;
  background: linear-gradient(135deg, rgba(255, 204, 0, 0.116), rgba(86, 89, 238, 0.548), rgba(38,34,97,.6));
  -webkit-mask-composite: xor; mask-composite: exclude;
  pointer-events:none;
}
.modal-entity .modal-title{ color:#fff; }
.modal-entity .modal-title .bi{
  width:2rem; height:2rem; border-radius:50%; display:inline-flex; align-items:center; justify-content:center;
  background: rgba(255,255,255,.15); box-shadow: inset 0 0 0 1px rgba(255,255,255,.25);
}
.modal-entity .list-group-item{
  background: transparent; color: #fff; border-color: rgba(255,255,255,.15);
  display:flex; align-items:center; justify-content:space-between; gap:.75rem;
}
.modal-entity .list-group-item:hover{ background: rgba(0,0,0,.18); }
.modal-entity .list-group-item .bi{ opacity:.9; transition: transform .18s ease, opacity .18s ease; }
.modal-entity .list-group-item:hover .bi{ transform: translateX(2px) translateY(-1px); opacity:1; }
.modal-entity .btn-close{ filter: invert(1) grayscale(100%); opacity:.85; }
.modal-entity .btn-close:hover{ opacity:1; }
.modal-entity .modal-header{ padding-bottom: .25rem; }

/* Animación spin 180° + scale-in */
.modal-entity .modal-dialog{ transform: none; opacity: 1; }

/* Backdrop con tinte institucional */
.modal-backdrop.show{
  background:
    radial-gradient(60vw 60vh at 50% 10%, rgba(255,202,0,.10), transparent 50%),
    rgba(0,0,0,.5);
  opacity: 1;
}

/* Respeto a reduced-motion */
@media (prefers-reduced-motion: reduce){
  .modal-entity.modal.fade .modal-dialog{
    transform: scale(.98);
    transition: transform .25s ease, opacity .25s ease;
  }
  .modal-entity.modal.show .modal-dialog{ transform: scale(1); }
}

/* Flip card (para Facultades) */
.flip-card{ perspective: 100px; }
.flip-inner{
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transition: transform 0.6s ease;
}
.flip-card.flipped .flip-inner{ transform: rotateY(180deg); }
.flip-face{
  position: relative;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
}
.flip-back{
  position: absolute;
  inset: 0;
  transform: rotateY(90deg);
  overflow: hidden;
}
.flip-front .icon-badge{ transition: transform .7s ease; }
.flip-front:hover .icon-badge{ transform: translateY(-2px); }

/* Contenido del reverso */
.entity-back{
  display:flex; flex-direction:column; gap:.5rem;
}
.entity-list a{
  display:flex; align-items:center; gap:.5rem;
  color:#fff; text-decoration:none;
  padding:.4rem .5rem; border-radius:.35rem;
  background: rgba(0,0,0,.12);
}
.entity-list a:hover{ background: rgba(0,0,0,.2); }
.entity-list .bi{ opacity:.9; }
.entity-back .back-action{
  color:#ffca00; text-decoration:none; font-weight:600;
}
.entity-back .back-action:hover{ text-decoration:underline; }

/* Ajustes de navbar */
.navbar .social a{ font-size:1.1rem; margin-right:1.6rem; }
.navbar .social a:last-child{ margin-right:0; }
.navbar-search{ width:100%; }
@media (min-width: 992px){
  .navbar-search{ width:auto; }
  .navbar-search .form-control{ width:220px; }
}

/* Accesibilidad */
.skip-link{ position:absolute; left:-9999px; top:auto; width:1px; height:1px; overflow:hidden; }
.skip-link:focus{ left:1rem; top:1rem; width:auto; height:auto; padding:.5rem .75rem; background:#fff; color:#000; z-index:1050; border-radius:.25rem; }

/* Búsqueda compacta en navbar */
.navbar-search .form-control{ border-radius: 2rem; padding-left: .85rem; padding-right:.85rem; }
.navbar-search .btn{ border-radius: 2rem; }

/* Ajustes responsivos */
@media (max-width: 767.98px){
  .hero h1{ font-size: 1.9rem; }
  .entity-card{ padding: 1.25rem !important; }
  .team-hero .team-hero-caption{ padding-left: 1rem; padding-right: 1rem; }
}

@media (max-width: 575.98px){
  .navbar-brand img{ height:32px; }
  .navbar-brand .brand-text{ font-size:1.05rem; }
  .hero h1{ font-size: 1.7rem; }
  /* Ajustar relación del hero de directorio para pantallas pequeñas */
  .team-hero .ratio{ --bs-aspect-ratio: 56.25%; }
}

/* SideNav izquierdo superior (con fondo translúcido) */
.side-nav{
  position:fixed; right:1rem; bottom:1rem; top:auto; z-index:10;
  background: rgba(0,0,0,.50);
  border: 1px solid rgba(255,255,255,.1);
  border-radius: .4rem; padding:.35rem;
  backdrop-filter: blur(2px);
  transition: transform .35s ease, opacity .35s ease;
  font-size: .9rem;
}
.side-nav .nav-link{
  display:flex; align-items:center; gap:.4rem; padding:.2rem .4rem;
  color:#eef2f7; opacity:.85;
}
.side-nav .nav-link:hover{ opacity:1; color:#fff; }
.side-nav .nav-link .label{ font-size:.7rem; }
.side-nav .dot{ width:.3rem; height:.3rem; border-radius:50%; background:#d0d4da; display:inline-block; box-shadow:0 0 0 2px rgba(0,0,0,0.06) inset; }
.side-nav .nav-link.active .dot{ background: var(--accent); box-shadow:0 0 0 2px rgba(255,202,0,.35); }
.side-nav .nav-link.active .label{ color:#fff; font-weight:700; }
@media (prefers-color-scheme: dark){
  .side-nav{ border-color: rgba(255,255,255,.12); }
  .side-nav .dot{ background:#bfc4cc; box-shadow:0 0 0 2px rgba(255,255,255,0.08) inset; }
}

/* Estado oculto para animación de entrada del sidebar */
.side-nav.is-hidden{ opacity:0; transform: translateX(8px); }

/* Pulso breve del indicador (dot) cuando cambia la sección activa */
@keyframes sideDotPulse{
  0%{ transform: scale(1); }
  50%{ transform: scale(1.35); }
  100%{ transform: scale(1); }
}
.side-nav .dot.pulse{ animation: sideDotPulse .45s ease; }

/* Offset al hacer ancla para que no tape el navbar */
section{ scroll-margin-top: 90px; }


/* Navbar estado scrolled */
.navbar-ca.navbar-scrolled{
  background:#1f1b4a;
  box-shadow:0 8px 20px rgba(0,0,0,.18);
}

/* (Eliminado) Animación de subrayado por opción en navbar */

/* Evitar scroll mientras el overlay está activo */
body.no-scroll{ overflow:hidden; }

/* Ajustes del logo redondo en mvil */
@media (max-width: 575.98px){
  .navbar-brand img{ height:36px; width:36px; padding:5px; }
}
/* Modal reglamento */
.modal-reglamento .modal-dialog{
  transform: translateY(20px);
  opacity:0;
  transition: transform .35s ease, opacity .35s ease;
}
.modal-reglamento.show .modal-dialog,
.modal-reglamento.fade.show .modal-dialog{
  transform: translateY(0);
  opacity:1;
}
.modal-reglamento .modal-content{
  background: linear-gradient(145deg, rgba(38,34,97,.20) 0%, rgba(255,255,255,.95) 70%);
  border: 1px solid rgba(38,34,97,.18);
  border-radius: 1rem;
  box-shadow: 0 24px 60px rgba(12,11,28,.25);
  overflow: hidden;
}
.modal-reglamento .modal-header{ background: rgba(255,255,255,.85); }
.modal-reglamento .modal-title{ font-weight:700; color:#262261; }
.modal-reglamento .modal-header .bi{ color: var(--secondary); }
.modal-reglamento .modal-body{
  background: rgba(255,255,255,.55);
  border-radius: .75rem;
}
.reglamento-downloads{ position: relative; z-index:1; }
.reglamento-card{
  display:flex;
  align-items:center;
  gap:1rem;
  padding:1rem 1.1rem;
  border-radius:.85rem;
  border:1px solid rgba(38,34,97,.12);
  background: linear-gradient(135deg, rgba(255,255,255,1) 0%, rgba(245,246,252,.9) 100%);
  text-decoration:none;
  color:#1f1b4a;
  box-shadow: 0 14px 24px rgba(38,34,97,.08);
  position:relative;
  overflow:hidden;
  transition: transform .2s ease, box-shadow .2s ease;
}
.reglamento-card::after{
  content:"";
  position:absolute;
  inset:0;
  background: linear-gradient(135deg, rgba(238,130,25,.12), transparent 60%);
  opacity:0;
  transition: opacity .25s ease;
}
.reglamento-card:hover{
  transform: translateY(-4px);
  box-shadow: 0 18px 30px rgba(38,34,97,.16);
}
.reglamento-card:hover::after{ opacity:1; }
.reglamento-card > *{ position:relative; z-index:1; }
.reglamento-icon{
  width:3rem; height:3rem;
  border-radius:.85rem;
  background: rgba(38,34,97,.1);
  display:flex;
  align-items:center;
  justify-content:center;
  color: var(--secondary);
  font-size:1.35rem;
}
.reglamento-arrow{
  margin-left:auto;
  color: var(--secondary);
  font-size:1.4rem;
  transition: transform .2s ease;
}
.reglamento-card:hover .reglamento-arrow{ transform: translateX(4px); }
.modal-reglamento .modal-footer{
  background: rgba(255,255,255,.85);
